<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/host_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#fff"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:text="Здесь будет Ваше название"
                    android:textColor="#000"
                    android:textSize="30dp"
                    android:fontFamily="sans-serif-light"/>

                <!--<TextView-->
                    <!--android:id="@+id/host_points_tv"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textColor="@color/black"-->
                    <!--android:paddingRight="4dp"-->
                    <!--android:textSize="16sp"-->
                    <!--android:typeface="monospace"-->
                    <!--android:fontFamily="sans-serif-light"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:id="@+id/host_points_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:paddingRight="4dp"
                    android:textSize="16sp"
                    android:typeface="monospace"
                    android:fontFamily="sans-serif-light"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_local_atm_black_24dp"/>
            </LinearLayout>


            <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:background="#000" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#fff"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_content_paste_black_24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:text="Описание"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:fontFamily="sans-serif-light"/>

                </LinearLayout>


                <TextView
                    android:id="@+id/host_description_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:hint="@string/description"
                    android:padding="@dimen/description_padding"
                    android:textSize="@dimen/host_profile_text_size"
                    android:fontFamily="sans-serif-light"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:textSize="@dimen/host_profile_text_size"
                    android:paddingLeft="@dimen/description_padding"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="italic"
                    android:text="Описание программы лояльности:"/>

                <TextView
                    android:id="@+id/host_loy_descr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:textSize="@dimen/host_profile_text_size"
                    android:fontFamily="sans-serif-light"
                    android:paddingLeft="@dimen/description_padding"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#fff"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_access_time_black_24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:text="Время работы"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:fontFamily="sans-serif-light"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/host_open_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="Время открытия"
                        android:textSize="@dimen/host_profile_text_size"
                        android:fontFamily="sans-serif-light"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:fontFamily="sans-serif-light"/>

                    <TextView
                        android:id="@+id/host_close_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="Время закрытия"
                        android:textSize="@dimen/host_profile_text_size"
                        android:fontFamily="sans-serif-light"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#fff"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_pin_drop_black_24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:text="Адрес"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:fontFamily="sans-serif-light"/>

                </LinearLayout>
                <TextView
                    android:id="@+id/host_address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:textSize="@dimen/host_profile_text_size"
                    android:hint="Здесь будет ваш адрес"
                    android:padding="20dp"
                    android:fontFamily="sans-serif-light"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="#fff"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_map_black_24dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="8dp"
                        android:text="Карта"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:fontFamily="sans-serif-light"/>
                </LinearLayout>


                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="horizontal" android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <com.example.BonusHub.fragment.SquareLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/holo_blue_bright">
                        <fragment
                            android:id="@+id/mini_map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        </fragment>
                    </com.example.BonusHub.fragment.SquareLinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</android.support.v4.widget.NestedScrollView>
