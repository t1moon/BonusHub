<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/host_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:padding="20dp"
                    android:typeface="monospace"
                    android:text="Здесь будет Ваше название"
                    android:textColor="#000"
                    android:textSize="25dp" />

            <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorAccent" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_content_paste_black_24dp"
                android:text="Описание"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:padding="@dimen/profile_item"
                android:layout_marginTop="10sp"/>

            <TextView
                android:id="@+id/host_description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:hint="@string/description"
                android:paddingLeft="@dimen/profile_subitem"
                android:paddingRight="@dimen/profile_subitem"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_pin_drop_black_24dp"
                android:text="Адрес"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:padding="@dimen/profile_item"
                android:layout_marginTop="10sp"/>

            <TextView
                android:id="@+id/host_address_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:hint="Здесь будет ваш адрес"
                android:paddingRight="@dimen/profile_subitem"
                android:paddingLeft="@dimen/profile_subitem"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_access_time_black_24dp"
                android:text="Время работы"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:padding="@dimen/profile_item"
                android:layout_marginTop="10sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/profile_subitem"
                android:paddingRight="@dimen/profile_subitem">

                <TextView
                    android:id="@+id/host_open_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:hint="00:00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:text="  -  " />

                <TextView
                    android:id="@+id/host_close_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2sp"
                    android:hint="00:00" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
